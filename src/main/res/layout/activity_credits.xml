<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CreditsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/attnd7"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credits_heading"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/circleBackground"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="34sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:textColor="@color/colorGreen"
            android:id="@+id/news"
            android:scrollbars="vertical"
            android:textSize="20sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            tools:text="News here"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/disclaimer"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="16sp"
            android:textColor="@color/colorRed"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/disclaimer_heading"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/disc_text"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorRed"
            android:text="@string/disclaimer"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="end"
            android:textAlignment="center"
            android:textColor="@color/colorGreen"
            android:text="@string/my_name"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"/>

    </LinearLayout>

</RelativeLayout>